{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product: {{ product.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Picture</th>
                <td><img src="{{ asset('upload/product/'~product.picture)}}" style="height:50px;"/></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('admin') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('admin/product/_delete_form.html.twig') }}
{% endblock %}
